<h2>タスク詳細</h2>
<div class="new_area">
  <p>タスク名：<%= @task.title %></p>
  <p>タスク内容：<%= @task.content %></p>
  <p>タスク：<% @task.labels.each do |label| %>
              <%= label.name %>
            <% end %>
  </p>
  <p>終了期限：<%= @task.expired_at %></p>
  <p>ステータス：<%= @task.status %></p>
  <p>優先順位：<%= @task.priority %></p>
  <% @task.labels.each do |label| %>
    <%= label.name %>
  <% end %> 
  <p class="btn_area"><button type="button" class="btn btn-default btn-default active"><%= link_to '戻る', tasks_path %></button></p>
</div>
