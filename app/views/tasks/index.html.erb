<h1>タスク一覧</h1>
<p><%= notice %></p>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<div>
  <%= form_with(local: true, method: :get, url: tasks_path ) do |form| %>
    <p>
      <%= form.label :search_title, "タスク名" %>
      <%= form.text_field :search_title, placeholder: "タスク名で検索" %>
    </p>
    <p>
      <%= form.label :status, "ステータス" %>
      <%= form.select :search_status, Task.statuses.keys, { include_blank: '選択してください'} %>
    </p>
    <p><%= form.submit "検索", name: "search" %></p>
  <% end %>
</div>
<table>
  <tr>
    <th>タスク名</th>
    <th>タスク</th>
    <th>終了期限</th>
    <th>ステータス</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td class="task_row"><%= task.title %></td>
      <td class="task_row"><%= task.content %></td>
      <td class="task_row"><%= task.expired_at %></td>
      <td class="task_row"><%= task.status %></td>
      <td><%= link_to '詳細を確認', task_path(task.id) %></td>
      <td><%= link_to 'タスクを編集する', edit_task_path(task.id) %></td>
      <td><%= link_to 'タスクを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
    </tr>
  <% end %>
</table>
<%= link_to '新規作成', new_task_path %>

