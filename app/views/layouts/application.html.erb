<!DOCTYPE html>
<html>
  <head>
    <title>Manyou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <!-- コード追加 Bootstrap CSS読み込みコード-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- コード追加 Bootstrap JavaScript読み込みコード-->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <span class="navbar-brand">タスク管理app</span>
          </div>
          <div class="collapse navbar-collapse" id="navbarEexample1">
            <ul class="nav navbar-nav">
              <li><%= link_to '新規作成', new_task_path %></li>
              <li><%= link_to 'タスク一覧', tasks_path %></li>
              <li><%= link_to "管理画面", admin_users_path %></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="content">
      <% flash.each do |key, value| %>
        <div class="message"><%= content_tag(:div, value, class: "#{key}") %></div>
      <% end %>
      <% if logged_in? %>
        <button type="button" class="btn btn-info"><%= link_to "プロフィール", user_path(current_user.id) %></button>
        <button type="button" class="btn btn-warning"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></button> 
      <% else %>
        <button type="button" class="btn btn-info"><%= link_to "新規アカウント作成", new_user_path %></button>
        <button type="button" class="btn btn-warning"><%= link_to "ログイン", new_session_path %></button> 
      <% end %>
      <%= yield %>
    </div>   
  </body>
</html>
