<h2>新規アカウント作成</h2>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>  
  <p class="new_area">
    <%= f.label :名前 %><br>
    <%= f.text_field :name %>
  </p>
  <p class="new_area">
   <%= f.label :メールアドレス %><br>
    <%= f.email_field :email %> 
  </p>
  <p class="new_area">
    <%= f.label :パスワード %><br>
    <%= f.password_field :password %>
  </p>
  <p class="new_area">
    <%= f.label :パスワード確認 %><br>
    <%= f.password_field :password_confirmation %>
  </p><br>
  <p class="new_area"><%= f.submit "新規作成" %></p>
<% end %>