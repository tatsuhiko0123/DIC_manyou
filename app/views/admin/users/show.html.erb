<h2>【管理画面】：ユーザー詳細情報</h2>
<div class="admin_show_area">
	<p>名前：<%= @user.name %></p>
	<p>ID：<%= @user.id %></p>
	<p>メールアドレス：<%= @user.email %></p>
	<p>管理権限：<%= @user.admin == "管理者" ? "あり" : "なし" %></p>
	<% @tasks.each do |task| %>
		<hr>
		<p>タスク名：<%= task.title %></p>
		<p>内容：<%= task.content %></p>
		<p>タスク：<% task.labels.each do |label| %>
              <%= label.name %>
            <% end %>
  	</p>
		<p>登録日時：<%= task.created_at %></p>
		<p>終了期限：<%= task.expired_at %></p>
		<p>ステータス：<%= task.status %></p>
		<p>優先順位：<%= task.priority %></p>
		<span type="button" class="btn btn-default btn-sm"><%= link_to '詳細を確認する', task_path(task.id) %></span>
		<span type="button" class="btn btn-default btn-sm"><%= link_to "タスクを編集する", edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' }, class: "edit_task" %></span>
		<span type="button" class="btn btn-default btn-sm"><%= link_to 'タスクを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: "delete_task" %></span>
	<% end %><br>
</div>
<hr>
<%= paginate @tasks %>
<p class="btn_area"><button type="button" class="btn btn-default btn-default active"><%= link_to "ユーザー一覧画面にもどる", admin_users_path %></button></p>