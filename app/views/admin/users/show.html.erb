<h2>【管理画面】：ユーザー情報詳細</h2>
<p>ID <%= @user.id %></p>
<p>名前 <%= @user.name %></p>
<p>メールアドレス <%= @user.email %></p>
<p>管理権限 <%= @user.admin == "管理者" ? "あり" : "なし" %></p>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <p>タスク名<%= task.title %></p>
      <p>内容<%= task.content %></p>
      <p>登録日時 <%= task.created_at %></p>
      <p>終了期限 <%= task.expired_at %></p>
      <p>ステータス <%= task.status %></p>
      <p>優先順位 <%= task.priority %></p>
      <%= link_to '詳細を確認する', task_path(task.id), class: "show_task" %>
      <%= link_to "タスクを編集する", edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' }, class: "edit_task" %>
      <%= link_to 'タスクを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: "delete_task" %>
    </li>
  <% end %>
</ul>
<p><%= link_to "ユーザー一覧画面にもどる", admin_users_path %></p>