<h2>【管理画面】：ユーザー一覧画面</h2>
<%= notice %>
<%= link_to '新しくユーザーを作成する', new_admin_user_path %>
<% @users.each do |user| %>
  <p>ID<%= user.id %></p>
  <p>名前<%= user.name %></p>
  <p>タスク<%= user.tasks.count %>件</p>
  <%= link_to '詳細を確認する', admin_user_path(user.id), class: "show_user" %>
  <%= link_to "ユーザー情報を編集する", edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %>
  <%= link_to 'ユーザー情報を削除する', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
<% end %>